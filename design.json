{
    "designSystem": {
      "colorPalette": {
        "primary": {
          "background": "#0F1419",
          "backgroundLighter": "#1A1F26",
          "surface": "#252A32",
          "surfaceHover": "#2A3038",
          "accent": "#4A9EFF",
          "accentHover": "#3A8EEF"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#B0B8C1",
          "muted": "#8A9199",
          "accent": "#4A9EFF"
        },
        "borders": {
          "default": "#2A3038",
          "subtle": "#1E232A",
          "accent": "#4A9EFF"
        },
        "shadows": {
          "card": "rgba(0, 0, 0, 0.2)",
          "cardHover": "rgba(0, 0, 0, 0.3)",
          "button": "rgba(0, 0, 0, 0.15)"
        }
      },
      
      "typography": {
        "heading": {
          "h1": {
            "fontSize": "3rem",
            "fontWeight": "700",
            "color": "#FFFFFF",
            "lineHeight": "1.2"
          },
          "h2": {
            "fontSize": "2rem",
            "fontWeight": "600",
            "color": "#FFFFFF",
            "lineHeight": "1.3"
          },
          "h3": {
            "fontSize": "1.5rem",
            "fontWeight": "600",
            "color": "#FFFFFF",
            "lineHeight": "1.4"
          }
        },
        "body": {
          "large": {
            "fontSize": "1.125rem",
            "color": "#B0B8C1",
            "lineHeight": "1.6"
          },
          "default": {
            "fontSize": "1rem",
            "color": "#B0B8C1",
            "lineHeight": "1.5"
          },
          "small": {
            "fontSize": "0.875rem",
            "color": "#8A9199",
            "lineHeight": "1.4"
          }
        }
      },
  
      "elementStyling": {
        "layout": {
          "pageBackground": {
            "background": "#0F1419",
            "minHeight": "100vh",
            "DO_NOT": "Apply gradients or patterns to main background"
          },
          "contentContainer": {
            "maxWidth": "1200px",
            "margin": "0 auto",
            "padding": "2rem"
          }
        },
  
        "navigation": {
          "container": {
            "background": "transparent",
            "padding": "1rem 0",
            "borderBottom": "none"
          },
          "links": {
            "color": "#B0B8C1",
            "fontSize": "1rem",
            "fontWeight": "400",
            "hover": {
              "color": "#FFFFFF"
            },
            "DO_NOT": "Apply background colors or borders to nav links"
          },
          "icons": {
            "fill": "#B0B8C1",
            "size": "1.25rem",
            "hover": {
              "fill": "#FFFFFF"
            }
          }
        },
  
        "hero": {
          "container": {
            "background": "transparent",
            "padding": "4rem 0"
          },
          "profileImage": {
            "borderRadius": "1rem",
            "border": "2px solid #2A3038",
            "shadow": "0 8px 24px rgba(0, 0, 0, 0.2)"
          },
          "greeting": {
            "fontSize": "3rem",
            "color": "#FFFFFF",
            "fontWeight": "700"
          },
          "subtitle": {
            "color": "#B0B8C1",
            "fontSize": "1.125rem",
            "marginTop": "0.5rem"
          },
          "description": {
            "color": "#8A9199",
            "fontSize": "1rem",
            "lineHeight": "1.6",
            "marginTop": "1rem"
          }
        },
  
        "buttons": {
          "primary": {
            "background": "#4A9EFF",
            "color": "#FFFFFF",
            "border": "none",
            "borderRadius": "0.5rem",
            "padding": "0.75rem 1.5rem",
            "fontWeight": "500",
            "shadow": "0 2px 8px rgba(74, 158, 255, 0.25)",
            "hover": {
              "background": "#3A8EEF",
              "shadow": "0 4px 12px rgba(74, 158, 255, 0.35)",
              "transform": "translateY(-1px)"
            },
            "DO_NOT": "Apply gradients or multiple colors to button backgrounds"
          },
          "secondary": {
            "background": "#252A32",
            "color": "#FFFFFF",
            "border": "1px solid #2A3038",
            "borderRadius": "0.5rem",
            "padding": "0.75rem 1.5rem",
            "fontWeight": "500",
            "hover": {
              "background": "#2A3038",
              "borderColor": "#4A9EFF"
            }
          },
          "ghost": {
            "background": "transparent",
            "color": "#B0B8C1",
            "border": "1px solid #2A3038",
            "borderRadius": "0.5rem",
            "padding": "0.5rem 1rem",
            "fontSize": "0.875rem",
            "hover": {
              "color": "#FFFFFF",
              "borderColor": "#4A9EFF"
            }
          }
        },
  
        "cards": {
          "workExperience": {
            "background": "#1A1F26",
            "border": "1px solid #2A3038",
            "borderRadius": "1rem",
            "padding": "2rem",
            "shadow": "0 4px 16px rgba(0, 0, 0, 0.1)",
            "hover": {
              "background": "#1F242B",
              "borderColor": "#3A4048",
              "shadow": "0 8px 24px rgba(0, 0, 0, 0.15)",
              "transform": "translateY(-2px)"
            },
            "companyLogo": {
              "size": "3rem",
              "borderRadius": "0.5rem",
              "DO_NOT": "Apply shadows or borders to company logos"
            },
            "title": {
              "color": "#FFFFFF",
              "fontSize": "1.25rem",
              "fontWeight": "600"
            },
            "company": {
              "color": "#B0B8C1",
              "fontSize": "1rem",
              "fontWeight": "500"
            },
            "duration": {
              "color": "#8A9199",
              "fontSize": "0.875rem"
            },
            "description": {
              "color": "#B0B8C1",
              "fontSize": "0.95rem",
              "lineHeight": "1.5",
              "marginTop": "1rem"
            }
          },
          "education": {
            "background": "#1A1F26",
            "border": "1px solid #2A3038", 
            "borderRadius": "1rem",
            "padding": "2rem",
            "shadow": "0 4px 16px rgba(0, 0, 0, 0.1)",
            "institutionLogo": {
              "size": "3rem",
              "borderRadius": "0.5rem"
            },
            "degree": {
              "color": "#FFFFFF",
              "fontSize": "1.25rem",
              "fontWeight": "600"
            },
            "institution": {
              "color": "#B0B8C1",
              "fontSize": "1rem"
            },
            "details": {
              "color": "#8A9199",
              "fontSize": "0.9rem",
              "lineHeight": "1.5"
            }
          },
          "project": {
            "background": "#1A1F26",
            "border": "1px solid #2A3038",
            "borderRadius": "1rem",
            "padding": "1.5rem",
            "shadow": "0 4px 16px rgba(0, 0, 0, 0.1)",
            "hover": {
              "background": "#1F242B",
              "borderColor": "#3A4048",
              "shadow": "0 8px 24px rgba(0, 0, 0, 0.15)",
              "transform": "translateY(-2px)"
            },
            "preview": {
              "borderRadius": "0.75rem",
              "overflow": "hidden",
              "aspectRatio": "16/9",
              "background": "#252A32"
            },
            "title": {
              "color": "#FFFFFF",
              "fontSize": "1.125rem",
              "fontWeight": "600",
              "marginTop": "1rem"
            },
            "description": {
              "color": "#B0B8C1",
              "fontSize": "0.9rem",
              "lineHeight": "1.5",
              "marginTop": "0.5rem"
            }
          }
        },
  
        "tags": {
          "technology": {
            "background": "#252A32",
            "color": "#B0B8C1",
            "border": "1px solid #2A3038",
            "borderRadius": "0.375rem",
            "padding": "0.25rem 0.75rem",
            "fontSize": "0.75rem",
            "fontWeight": "500",
            "display": "inline-block",
            "margin": "0.25rem",
            "DO_NOT": "Apply hover effects or shadows to technology tags"
          },
          "highlight": {
            "background": "rgba(74, 158, 255, 0.1)",
            "color": "#4A9EFF",
            "border": "1px solid rgba(74, 158, 255, 0.2)",
            "borderRadius": "0.375rem",
            "padding": "0.25rem 0.75rem",
            "fontSize": "0.75rem",
            "fontWeight": "500"
          }
        },
  
        "sections": {
          "tabNavigation": {
            "container": {
              "background": "#1A1F26",
              "borderRadius": "0.75rem",
              "padding": "0.25rem",
              "border": "1px solid #2A3038",
              "display": "flex",
              "marginBottom": "2rem"
            },
            "tab": {
              "background": "transparent",
              "color": "#8A9199",
              "padding": "0.75rem 2rem",
              "borderRadius": "0.5rem",
              "fontWeight": "500",
              "cursor": "pointer",
              "transition": "all 0.2s ease"
            },
            "tabActive": {
              "background": "#4A9EFF",
              "color": "#FFFFFF",
              "shadow": "0 2px 8px rgba(74, 158, 255, 0.25)"
            }
          },
          "sectionHeader": {
            "title": {
              "color": "#FFFFFF",
              "fontSize": "2rem",
              "fontWeight": "600",
              "marginBottom": "1rem"
            },
            "viewMore": {
              "color": "#4A9EFF",
              "fontSize": "1rem",
              "fontWeight": "500",
              "textDecoration": "none",
              "hover": {
                "color": "#3A8EEF",
                "textDecoration": "underline"
              }
            }
          }
        },
  
        "blogPosts": {
          "container": {
            "background": "transparent",
            "padding": "1.5rem 0"
          },
          "post": {
            "borderBottom": "1px solid #2A3038",
            "padding": "1.5rem 0",
            "hover": {
              "background": "rgba(26, 31, 38, 0.5)",
              "borderRadius": "0.5rem",
              "padding": "1.5rem"
            }
          },
          "title": {
            "color": "#FFFFFF",
            "fontSize": "1.25rem",
            "fontWeight": "600",
            "marginBottom": "0.5rem",
            "hover": {
              "color": "#4A9EFF"
            }
          },
          "excerpt": {
            "color": "#B0B8C1",
            "fontSize": "0.95rem",
            "lineHeight": "1.5",
            "marginBottom": "1rem"
          },
          "meta": {
            "color": "#8A9199",
            "fontSize": "0.875rem",
            "display": "flex",
            "alignItems": "center",
            "gap": "1rem"
          }
        },
  
        "footer": {
          "container": {
            "background": "transparent",
            "padding": "2rem 0",
            "borderTop": "1px solid #2A3038",
            "marginTop": "4rem"
          },
          "text": {
            "color": "#8A9199",
            "fontSize": "0.875rem",
            "textAlign": "center"
          },
          "socialIcons": {
            "fill": "#8A9199",
            "size": "1.25rem",
            "hover": {
              "fill": "#4A9EFF"
            }
          }
        }
      },
  
      "animations": {
        "hover": {
          "duration": "0.2s",
          "easing": "ease-in-out",
          "properties": ["background-color", "border-color", "color", "transform", "box-shadow"]
        },
        "cardHover": {
          "transform": "translateY(-2px)",
          "shadow": "0 8px 24px rgba(0, 0, 0, 0.15)",
          "duration": "0.3s"
        },
        "buttonHover": {
          "transform": "translateY(-1px)",
          "duration": "0.2s"
        }
      },
  
      "spacing": {
        "section": "4rem",
        "cardGap": "1.5rem",
        "elementGap": "1rem",
        "textGap": "0.5rem"
      },
  
      "borderRadius": {
        "small": "0.375rem",
        "default": "0.5rem",
        "large": "1rem",
        "card": "1rem"
      },
  
      "DO_NOT_RULES": [
        "Do not apply gradients to text elements - use solid colors only",
        "Do not apply card shadows to icons or logos",
        "Do not use card background colors on button elements", 
        "Do not apply hover transforms to technology tags",
        "Do not use button colors for card backgrounds",
        "Do not apply navigation link styles to body text",
        "Do not use primary button styling on secondary elements",
        "Do not apply card border radius to inline elements",
        "Do not use hero text colors for card content",
        "Do not apply section background colors to individual elements"
      ],
  
      "contextRules": {
        "cards": "Apply shadows and hover effects only to card containers, not their child elements",
        "buttons": "Primary blue color only on CTA buttons, not decorative elements",
        "text": "Use hierarchy - white for titles, light gray for content, dark gray for meta",
        "backgrounds": "Dark theme throughout - no light backgrounds on any elements",
        "borders": "Subtle borders on containers, accent borders only on interactive elements",
        "icons": "Match parent text color unless specifically accent colored"
      }
    }
  }